<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/side_nav_bar"
        android:gravity="center_vertical|center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:id="@+id/layout_profil"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choirunnisa Fatima"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:padding="5dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_profilku"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="@string/btn_profilku"
                android:drawableLeft="@drawable/ic_person"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@color/colorAccent"
                android:textStyle="normal"
                android:textColor="@color/abc_primary_text_material_light"
                android:textAllCaps="false"
                android:textSize="@dimen/abc_text_size_button_material" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_mulai_garsel"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:textSize="@dimen/abc_text_size_button_material"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/button"
        android:layout_marginLeft="@dimen/abc_text_size_menu_material"
        android:layout_marginRight="@dimen/abc_text_size_menu_material"
        android:layout_marginTop="5dp" />

</LinearLayout>
